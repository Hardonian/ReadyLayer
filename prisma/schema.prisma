// ReadyLayer Platform Schema
// This schema replaces the gamification app schema with ReadyLayer core models

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Core User Model (Supabase Auth compatible)
model User {
  id            String    @id // Uses Supabase auth.users.id (UUID as TEXT)
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  organizations OrganizationMember[]
  apiKeys       ApiKey[]
  reviews       Review[]
  jobs          Job[]
  auditLogs     AuditLog[]
  subscriptions Subscription[]

  @@index([email])
}

// Organizations
model Organization {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  plan         String   @default("starter") // starter, growth, scale
  billingEmail String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  members       OrganizationMember[]
  repositories  Repository[]
  configs       OrganizationConfig[]
  installations Installation[]
  subscriptions Subscription[]
  auditLogs     AuditLog[]
  costTracking  CostTracking[]
  policyPacks   PolicyPack[]
  waivers       Waiver[]
  aiAnomalies   AIAnomaly[]
  aiSuggestions AIOptimizationSuggestion[]
  tokenUsage    TokenUsage[]
  modelPerformances ModelPerformance[]
  modelPerformanceAggregates ModelPerformanceAggregate[]
  aggregatedInsights AggregatedInsight[]
  dataRetentionPolicy DataRetentionPolicy?
  userConsents UserConsent[]
  predictiveAlerts PredictiveAlert[]

  @@index([slug])
}

// Organization Members (RBAC)
model OrganizationMember {
  id             String   @id @default(cuid())
  organizationId String
  userId         String
  role           String   @default("member") // owner, admin, member
  joinedAt       DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@index([organizationId])
  @@index([userId])
}

// Repositories
model Repository {
  id             String   @id @default(cuid())
  organizationId String
  name           String // repo name
  fullName       String // owner/repo
  provider       String // github, gitlab, bitbucket
  providerId     String? // Provider's repo ID
  url            String?
  defaultBranch  String   @default("main")
  isPrivate      Boolean  @default(true)
  enabled        Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization  Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  configs       RepositoryConfig[]
  reviews       Review[]
  tests         Test[]
  testRuns      TestRun[]
  docs          Doc[]
  installations Installation[]
  violations    Violation[]
  jobs          Job[]
  waivers       Waiver[]
  policyPacks   PolicyPack[]
  predictiveAlerts PredictiveAlert[]
  aiAnomalies   AIAnomaly[]
  aiSuggestions AIOptimizationSuggestion[]
  tokenUsage    TokenUsage[]
  runs          ReadyLayerRun[]

  @@unique([fullName, provider])
  @@index([organizationId])
  @@index([provider, providerId])
  @@index([fullName])
}

// GitHub/GitLab App Installations
model Installation {
  id             String   @id @default(cuid())
  organizationId String?
  repositoryId   String?
  provider       String // github, gitlab, bitbucket
  providerId     String // Installation ID from provider
  accessToken    String   @db.Text // Encrypted
  tokenEncrypted Boolean  @default(false) // Track if token is encrypted (for migration)
  permissions    Json // Granted permissions/scopes
  selectedRepos  String[] // Selected repo IDs
  webhookSecret  String? // HMAC secret for webhook validation
  isActive       Boolean  @default(true)
  installedAt    DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  repository   Repository?   @relation(fields: [repositoryId], references: [id], onDelete: Cascade)

  @@unique([provider, providerId])
  @@index([organizationId])
  @@index([repositoryId])
  @@index([tokenEncrypted])
}

// Repository Configurations (.readylayer.yml)
model RepositoryConfig {
  id           String   @id @default(cuid())
  repositoryId String   @unique
  config       Json // Parsed .readylayer.yml
  rawConfig    String?  @db.Text // Raw YAML
  version      Int      @default(1)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  repository Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)

  @@index([repositoryId])
}

// Organization Configurations (org-level defaults)
model OrganizationConfig {
  id             String   @id @default(cuid())
  organizationId String   @unique
  config         Json // Org-level defaults
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
}

// Review Guard Results
model Review {
  id            String    @id @default(cuid())
  repositoryId  String
  prNumber      Int
  prSha         String // Commit SHA
  prTitle       String?
  status        String    @default("pending") // pending, completed, failed, blocked
  result        Json? // Review results: { issues, summary, blocking }
  issuesFound   Json // [{ severity, rule_id, file, line, message, fix }]
  summary       Json? // { total_issues, critical, high, medium, low }
  isBlocked     Boolean   @default(false)
  blockedReason String?   @db.Text
  startedAt     DateTime  @default(now())
  completedAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  repository Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)
  user       User?      @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId     String?

  violations     Violation[]
  evidenceBundle EvidenceBundle?
  tokenUsage     TokenUsage[]
  run            ReadyLayerRun?

  @@unique([repositoryId, prNumber, prSha])
  @@index([repositoryId])
  @@index([status])
  @@index([isBlocked])
  @@index([createdAt])
}

// Test Engine Results
model Test {
  id           String    @id @default(cuid())
  repositoryId String
  prNumber     Int?
  prSha        String?
  filePath     String
  framework    String // jest, mocha, pytest, etc.
  status       String    @default("pending") // pending, generated, failed
  testContent  String?   @db.Text // Generated test code
  coverage     Json? // Coverage metrics
  placement    String? // Where test was placed
  startedAt    DateTime  @default(now())
  completedAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  repository     Repository      @relation(fields: [repositoryId], references: [id], onDelete: Cascade)
  evidenceBundle EvidenceBundle?

  @@index([repositoryId])
  @@index([prNumber])
  @@index([status])
  @@index([filePath])
}

// Test Run Execution (CI/CD runs)
model TestRun {
  id            String    @id @default(cuid())
  repositoryId  String
  prNumber      Int?
  prSha         String
  workflowRunId String? // GitHub Actions workflow run ID
  status        String    @default("pending") // pending, in_progress, completed, failed, cancelled
  conclusion    String? // success, failure, cancelled, skipped
  coverage      Json? // Coverage metrics: { total: number, lines: number, functions: number, branches: number }
  summary       Json? // Test summary: { total: number, passed: number, failed: number, skipped: number }
  artifactsUrl  String? // URL to download artifacts
  startedAt     DateTime  @default(now())
  completedAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  repository Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)

  @@unique([repositoryId, prSha, workflowRunId])
  @@index([repositoryId])
  @@index([prNumber])
  @@index([prSha])
  @@index([workflowRunId])
  @@index([status])
  @@index([createdAt])
}

// Doc Sync Results
model Doc {
  id            String    @id @default(cuid())
  repositoryId  String
  ref           String // Branch or commit SHA
  format        String // openapi, markdown, etc.
  version       String? // Version number
  content       String?   @db.Text // Generated doc content
  spec          Json? // Parsed spec (OpenAPI, etc.)
  status        String    @default("pending") // pending, generated, failed, published
  driftDetected Boolean   @default(false)
  driftDetails  Json? // Drift detection results
  publishedAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  repository     Repository      @relation(fields: [repositoryId], references: [id], onDelete: Cascade)
  evidenceBundle EvidenceBundle?

  @@unique([repositoryId, ref, format])
  @@index([repositoryId])
  @@index([status])
  @@index([driftDetected])
}

// ReadyLayer Run (unified pipeline: Review Guard → Test Engine → Doc Sync)
model ReadyLayerRun {
  id            String    @id @default(cuid())
  correlationId String    @unique // For tracing across services
  repositoryId  String?
  sandboxId     String?   @unique // For sandbox demo runs
  trigger       String    // 'webhook', 'manual', 'sandbox'
  triggerMetadata Json?   // { prNumber, prSha, userId, etc. }
  
  // Stage statuses
  reviewGuardStatus String @default("pending") // pending, running, succeeded, failed, skipped
  testEngineStatus  String @default("pending") // pending, running, succeeded, failed, skipped
  docSyncStatus     String @default("pending") // pending, running, succeeded, failed, skipped
  
  // Overall status
  status        String    @default("pending") // pending, running, completed, failed, cancelled
  conclusion    String?   // success, failure, partial_success, cancelled
  
  // Stage outputs
  reviewGuardResult Json? // Review result summary
  testEngineResult   Json? // Test generation/coverage summary
  docSyncResult      Json? // Doc sync summary
  
  // AI-touched detection
  aiTouchedDetected Boolean @default(false)
  aiTouchedFiles    Json?   // Array of detected files with confidence
  
  // Policy gates
  gatesPassed  Boolean   @default(false)
  gatesFailed  Json?     // Array of failed gates with reasons
  
  // Timing
  startedAt     DateTime  @default(now())
  completedAt  DateTime?
  reviewGuardStartedAt   DateTime?
  reviewGuardCompletedAt DateTime?
  testEngineStartedAt    DateTime?
  testEngineCompletedAt  DateTime?
  docSyncStartedAt       DateTime?
  docSyncCompletedAt    DateTime?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  repository Repository? @relation(fields: [repositoryId], references: [id], onDelete: SetNull)
  
  // Relations to stage outputs
  reviewId     String?   @unique
  review       Review?   @relation(fields: [reviewId], references: [id], onDelete: SetNull)
  
  auditLogs    AuditLog[]

  @@index([correlationId])
  @@index([repositoryId])
  @@index([sandboxId])
  @@index([status])
  @@index([createdAt])
  @@index([trigger])
}

// Queue Jobs (Redis-backed, but also persisted for durability)
model Job {
  id          String    @id @default(cuid())
  type        String // review, test_generation, doc_sync, webhook, run
  status      String    @default("pending") // pending, processing, completed, failed, retrying
  payload     Json // Job payload
  result      Json? // Job result
  error       String?   @db.Text
  retryCount  Int       @default(0)
  maxRetries  Int       @default(3)
  scheduledAt DateTime  @default(now())
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  repositoryId String?
  userId       String?
  runId        String?   // Link to ReadyLayerRun if this job is part of a run

  repository Repository? @relation(fields: [repositoryId], references: [id], onDelete: SetNull)
  user       User?       @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([type])
  @@index([status])
  @@index([scheduledAt])
  @@index([repositoryId])
  @@index([runId])
}

// Historical Violation Tracking (for pattern detection)
model Violation {
  id           String   @id @default(cuid())
  repositoryId String
  reviewId     String?
  ruleId       String // security.sql-injection, etc.
  severity     String // critical, high, medium, low
  file         String
  line         Int
  message      String   @db.Text
  detectedAt   DateTime @default(now())

  repository Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)
  review     Review?    @relation(fields: [reviewId], references: [id], onDelete: SetNull)

  @@index([repositoryId])
  @@index([ruleId])
  @@index([severity])
  @@index([detectedAt])
}

// API Keys (for programmatic access)
model ApiKey {
  id         String    @id @default(cuid())
  userId     String
  name       String
  keyHash    String // Hashed API key
  scopes     String[] // read, write, admin
  lastUsedAt DateTime?
  expiresAt  DateTime?
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([keyHash])
  @@index([isActive])
}

// Billing & Subscriptions
model Subscription {
  id                   String    @id @default(cuid())
  organizationId       String
  userId               String // User who created subscription
  plan                 String // starter, growth, scale
  status               String    @default("active") // active, cancelled, expired, trialing
  stripeCustomerId     String?
  stripeSubscriptionId String?
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean   @default(false)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId])
  @@index([status])
  @@index([stripeCustomerId])
}

// Cost Tracking (LLM spend, API calls)
model CostTracking {
  id             String   @id @default(cuid())
  organizationId String
  date           DateTime @db.Date
  service        String // llm, api, storage
  provider       String // openai, anthropic, etc.
  amount         Decimal  @db.Decimal(10, 4) // Cost in USD
  units          Int // Tokens, API calls, etc.
  metadata       Json? // Additional tracking data
  createdAt      DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, date, service, provider])
  @@index([organizationId])
  @@index([date])
  @@index([service])
}

// Audit Logs (for compliance and debugging)
model AuditLog {
  id             String   @id @default(cuid())
  organizationId String?
  userId         String?
  action         String // create, update, delete, override, block
  resourceType   String // review, config, installation, etc.
  resourceId     String?
  details        Json? // Action details
  ipAddress      String?
  userAgent      String?
  createdAt      DateTime @default(now())

  organization Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  user         User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  run          ReadyLayerRun? @relation(fields: [runId], references: [id], onDelete: SetNull)
  runId        String?

  @@index([organizationId])
  @@index([userId])
  @@index([action])
  @@index([resourceType])
  @@index([createdAt])
  @@index([runId])
}

// Policy-as-Code Models

// Policy Pack (versioned policy configuration)
model PolicyPack {
  id             String   @id @default(cuid())
  organizationId String
  repositoryId   String? // null = org-level, set = repo-level
  version        String // Semantic version (e.g., "1.0.0")
  source         String   @db.Text // Policy source (YAML/JSON)
  checksum       String // SHA-256 hash of source for integrity
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  repository   Repository?  @relation(fields: [repositoryId], references: [id], onDelete: Cascade)
  rules        PolicyRule[]

  @@unique([organizationId, repositoryId, version])
  @@index([organizationId])
  @@index([repositoryId])
  @@index([checksum])
  @@index([createdAt])
}

// Policy Rule (individual rule configuration)
model PolicyRule {
  id              String   @id @default(cuid())
  policyPackId    String
  ruleId          String // e.g., "security.sql-injection"
  severityMapping Json // Maps rule severity to action: { critical: "block", high: "block", ... }
  enabled         Boolean  @default(true)
  params          Json? // Rule-specific parameters
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  policyPack PolicyPack @relation(fields: [policyPackId], references: [id], onDelete: Cascade)

  @@unique([policyPackId, ruleId])
  @@index([policyPackId])
  @@index([ruleId])
}

// Waiver (temporary exception for specific findings)
model Waiver {
  id             String    @id @default(cuid())
  organizationId String
  repositoryId   String? // null = org-level, set = repo-level
  ruleId         String // Rule to waive
  scope          String // "repo" | "branch" | "path"
  scopeValue     String? // Branch name or path pattern
  reason         String    @db.Text
  expiresAt      DateTime?
  createdBy      String // User ID
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  repository   Repository?  @relation(fields: [repositoryId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([repositoryId])
  @@index([ruleId])
  @@index([expiresAt])
  @@index([createdAt])
}

// Evidence Bundle (auditable decision record)
model EvidenceBundle {
  id                 String   @id @default(cuid())
  reviewId           String?  @unique // One of reviewId, testId, docId must be set
  testId             String?  @unique
  docId              String?  @unique
  inputsMetadata     Json // Inputs that led to decision (diff hash, file list hash, etc.)
  rulesFired         Json // Array of rule IDs that were evaluated
  deterministicScore Decimal  @db.Decimal(10, 4) // 0-100 score
  artifacts          Json? // Pointers to artifacts (logs, traces, etc.)
  policyChecksum     String // Policy pack checksum used
  toolVersions       Json? // Tool versions used
  timings            Json? // Performance timings
  createdAt          DateTime @default(now())

  review Review? @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  test   Test?   @relation(fields: [testId], references: [id], onDelete: Cascade)
  doc    Doc?    @relation(fields: [docId], references: [id], onDelete: Cascade)

  @@index([reviewId])
  @@index([testId])
  @@index([docId])
  @@index([policyChecksum])
  @@index([createdAt])
}

// AI Anomaly Detection Models

// AI Anomaly (tracked anomalies: drift, context slips, hallucinations, token waste)
model AIAnomaly {
  id          String   @id @default(cuid())
  repositoryId String
  organizationId String
  type        String // drift, context_slip, hallucination, token_waste, repeated_mistake
  severity    String // low, medium, high, critical
  description String   @db.Text
  file        String?
  line        Int?
  metadata    Json? // Additional anomaly data
  detectedAt  DateTime @default(now())
  resolvedAt  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  repository  Repository  @relation(fields: [repositoryId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([repositoryId])
  @@index([organizationId])
  @@index([type])
  @@index([severity])
  @@index([detectedAt])
  @@index([resolvedAt])
}

// AI Optimization Suggestion (personalized suggestions for developers)
model AIOptimizationSuggestion {
  id          String   @id @default(cuid())
  repositoryId String?
  organizationId String
  type        String // system_prompt, fine_tuning, context_optimization, model_selection
  difficulty  String // easy, intermediate, advanced
  title       String
  description String   @db.Text
  impact      String // low, medium, high
  effort      String // low, medium, high
  stack       String[] // e.g., ['react', 'typescript']
  llmAccess   String[] // e.g., ['openai', 'anthropic']
  codeExample String?  @db.Text
  steps       Json // Array of step strings
  estimatedSavings Json? // { tokens, cost, time }
  status      String   @default("pending") // pending, in_progress, completed, dismissed
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  repository  Repository?  @relation(fields: [repositoryId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([repositoryId])
  @@index([organizationId])
  @@index([type])
  @@index([difficulty])
  @@index([status])
  @@index([createdAt])
}

// Token Usage Tracking (detailed token usage per review/request)
model TokenUsage {
  id             String   @id @default(cuid())
  repositoryId   String?
  organizationId String
  reviewId       String?
  service        String // review, test_generation, doc_sync
  provider       String // openai, anthropic
  model          String
  inputTokens    Int
  outputTokens   Int
  totalTokens    Int
  cost           Decimal  @db.Decimal(10, 4)
  contextSize    Int? // Size of context sent
  wastePercentage Decimal? @db.Decimal(5, 2) // Estimated waste percentage
  metadata       Json? // Additional tracking data
  createdAt      DateTime @default(now())

  repository Repository? @relation(fields: [repositoryId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  review     Review?    @relation(fields: [reviewId], references: [id], onDelete: SetNull)

  @@index([repositoryId])
  @@index([organizationId])
  @@index([reviewId])
  @@index([service])
  @@index([createdAt])
}

// Predictive Alerts (predictions made by the system)
model PredictiveAlert {
  id                 String   @id @default(cuid())
  organizationId     String
  repositoryId       String?
  alertType          String // anomaly, drift, token_waste, repeated_mistake, security, quality
  severity           String // low, medium, high, critical
  confidence         Decimal  @db.Decimal(5, 4) // 0-1
  trustLevel         String // low, medium, high, very_high
  prediction         String   @db.Text
  rationale          String   @db.Text
  suggestedAction    String   @db.Text
  estimatedLikelihood Decimal @db.Decimal(5, 4) // 0-1
  historicalAccuracy Decimal? @db.Decimal(5, 4)
  dataPoints         Int
  metadata           Json? // Confidence score details
  resolvedAt         DateTime?
  wasCorrect         Boolean? // Feedback after resolution
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  repository   Repository?  @relation(fields: [repositoryId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([repositoryId])
  @@index([alertType])
  @@index([severity])
  @@index([confidence])
  @@index([trustLevel])
  @@index([resolvedAt])
  @@index([createdAt])
}

// Model Performance Tracking (individual performance records)
model ModelPerformance {
  id             String   @id @default(cuid())
  organizationId String
  modelId        String
  provider       String
  success        Boolean
  responseTimeMs Int      // Response time in milliseconds
  tokensUsed     Int
  cost           Decimal  @db.Decimal(10, 4)
  predictionId   String?  // Optional link to prediction
  metadata       Json?    // Additional tracking data
  timestamp      DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([modelId])
  @@index([provider])
  @@index([timestamp])
  @@index([predictionId])
}

// Model Performance Aggregates (aggregated metrics per model)
model ModelPerformanceAggregate {
  id                 String   @id @default(cuid())
  organizationId     String
  modelId            String
  provider           String
  totalRequests      Int
  successfulRequests Int
  failedRequests     Int
  averageResponseTime Decimal  @db.Decimal(10, 2)
  averageTokensUsed  Int
  averageCost        Decimal  @db.Decimal(10, 4)
  accuracyScore      Decimal  @db.Decimal(5, 4) // 0-1
  confidenceScore    Decimal  @db.Decimal(5, 4) // 0-1
  trustScore         Decimal  @db.Decimal(5, 4) // 0-1
  lastUpdated        DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, modelId, provider])
  @@index([organizationId])
  @@index([modelId])
  @@index([provider])
  @@index([lastUpdated])
}

// Aggregated Insights (patterns, anomalies, optimizations)
model AggregatedInsight {
  id             String   @id @default(cuid())
  organizationId String
  insightType    String   // pattern, anomaly, optimization, prediction
  confidence     Decimal  @db.Decimal(5, 4) // 0-1
  trustLevel     Decimal  @db.Decimal(5, 4) // 0-1
  dataPoints     Int
  firstSeen       DateTime
  lastSeen        DateTime
  trend           String   // increasing, decreasing, stable
  metadata        Json?

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([insightType])
  @@index([confidence])
  @@index([lastSeen])
}

// Data Retention Policy (compliance configuration)
model DataRetentionPolicy {
  id             String   @id @default(cuid())
  organizationId String   @unique
  gdprEnabled    Boolean  @default(true)
  retentionDays  Int      @default(365)
  requireConsent Boolean  @default(true)
  anonymizePII   Boolean  @default(true)
  allowAggregation Boolean @default(true)
  aggregationWindow Int   @default(30) // Days
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
}

// User Consent (GDPR consent tracking)
model UserConsent {
  id             String   @id @default(cuid())
  organizationId String
  userId         String
  consentType    String   // data_collection, analytics, marketing, etc.
  granted        Boolean
  grantedAt      DateTime @default(now())
  revokedAt      DateTime?
  ipAddress      String?
  userAgent      String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId, consentType])
  @@index([organizationId])
  @@index([userId])
  @@index([consentType])
  @@index([granted])
}

// Prediction Feedback (feedback on predictions for learning)
model PredictionFeedback {
  id                    String    @id @default(cuid())
  predictionId          String
  wasCorrect            Boolean
  actualOutcome         Json?
  feedbackType          String    // explicit, implicit, outcome_based
  confidenceAtPrediction Decimal   @db.Decimal(5, 4) // 0-1
  userId                String?
  timestamp             DateTime  @default(now())

  @@index([predictionId])
  @@index([userId])
  @@index([timestamp])
  @@index([wasCorrect])
}

// Outbox Pattern for Provider Status Updates
// Ensures idempotent delivery of status updates to git providers
model OutboxIntent {
  id                String   @id @default(cuid())
  idempotencyKey    String   @unique // Composite key: runId_stage_status
  runId             String
  repositoryId      String?
  sandboxId         String?  // For sandbox runs
  intentType        String   // 'status_update' | 'check_run' | 'commit_status'
  payload           Json     // Full payload to send to provider
  status            String   @default("pending") // pending, processing, completed, failed
  retryCount        Int      @default(0)
  maxRetries        Int      @default(3)
  error             String?  @db.Text
  postedAt          DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([runId])
  @@index([repositoryId])
  @@index([sandboxId])
  @@index([status])
  @@index([idempotencyKey])
  @@index([createdAt])
}
