# Database
DATABASE_URL="postgresql://user:password@localhost:5432/readylayer?schema=public"

# Supabase (for authentication)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Redis (required for queue system)
REDIS_URL="redis://localhost:6379"

# LLM Providers (at least one required)
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
DEFAULT_LLM_PROVIDER="openai"

# GitHub App (for integration)
GITHUB_APP_ID="your-github-app-id"
GITHUB_APP_SECRET="your-github-app-secret"
GITHUB_WEBHOOK_SECRET="your-github-webhook-secret"

# App Configuration
NODE_ENV="development"
LOG_LEVEL="info"

# API Configuration
API_BASE_URL="http://localhost:3000"
API_VERSION="v1"

# RAG Configuration (Evidence RAG Layer - defaults to disabled)
# Enable RAG features (requires Supabase migration with pgvector extension)
RAG_ENABLED=false
RAG_INGEST_ENABLED=false
RAG_QUERY_ENABLED=false
RAG_PROVIDER="disabled"
RAG_EMBED_MODEL="text-embedding-3-small"
RAG_MAX_CHUNKS_PER_DOC=100
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_MAX_CONTEXT_TOKENS=4000

# Stripe Configuration (for billing)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
STRIPE_PRICE_ID_GROWTH="price_your_growth_price_id"
STRIPE_PRICE_ID_SCALE="price_your_scale_price_id"
